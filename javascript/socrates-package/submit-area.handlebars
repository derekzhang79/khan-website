<div class="submit-area">
    {{#if explainUrl}}
    <a class="explain simple-button action-gradient" href="{{explainUrl}}">&laquo; Explain again</a>
    {{/if}}
    <button type="submit" class="submit simple-button action-gradient green">Submit</button>
    <span class="alert alert-success">
        <img class="face" src="/khan-exercises/css/images/face-smiley.gif">
        Correct!
    </span>
    <span class="alert alert-error">
        <img class="face" src="/khan-exercises/css/images/face-sad.gif">
        Incorrect
        <a class="see-answer" href="javascript: void 0">See Answer</a>
    </span>
    <a class="skip simple-button action-gradient" href="javascript:void 0">Skip &raquo;</a>
</div>
